@import url('//fonts.googleapis.com/css?family=Roboto:300,400,500,700,400italic')
@import url('//fonts.googleapis.com/icon?family=Material+Icons')
@import url('https://unpkg.com/vue-material@0.7.1/dist/vue-material.css')
@import "constants.styl"

body
    background-color: $color1
    font-family: Roboto
    margin: 0
    padding: 0
    height: 100vh

.container
    padding-top: 'calc(12px + %s)' % $header_heigth

.submit-block
    width: 100%
    .submit
        display: block
        margin: auto

.alert-material
    border-radius: 0
    border: 0
    box-shadow: 0 1px 3px rgba(0,0,0,.2), 0 2px 2px rgba(0,0,0,.14), 0 3px 1px -2px rgba(0,0,0,.12)